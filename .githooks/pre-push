#!/bin/sh

cargo fmt --all -- --config format_code_in_doc_comments=true
cargo clippy --all

buildargs=(
    "-p nostr"
    "-p nostr --no-default-features"
    "-p nostr --no-default-features --features all-nips"
    "-p nostr --no-default-features --features vanity"
    "-p nostr --features blocking"
    "-p nostr-sdk"
    "-p nostr-sdk --features websocket"
    "-p nostr-sdk --features rest-api"
    "-p nostr-sdk --no-default-features --features websocket"
    "-p nostr-sdk --no-default-features --features rest-api"
    "-p nostr-sdk --features websocket,sqlite"
    "-p nostr-sdk --features websocket,blocking"
    "-p nostr-ffi"
    "-p nostr-sdk-ffi"
    "-p nostr-nodejs"
    "-p nostr-sdk-nodejs"
)

for arg in "${buildargs[@]}"; do
    echo  "Running with '$arg' arg"
    cargo test $arg
    cargo clippy $arg
    echo
done
